<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    
    >

<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
android:background="@drawable/shape2"
     
    android:orientation="vertical">
    
    
    
       
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvempid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvempidlabel"
                android:typeface="serif" 
                android:textColor="#ffffff"
                />

            <EditText
                android:id="@+id/etempid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number">
  </EditText>
        </LinearLayout>
    
       
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvfirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                         android:textColor="#ffffff"
                android:text="@string/tvfirstnamelabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
  </EditText>
        </LinearLayout>
    
    
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvlastname"
                android:layout_width="wrap_content"
                         android:textColor="#ffffff"
                android:layout_height="wrap_content"
                android:text="@string/tvlastnamelabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etlastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
  </EditText>
        </LinearLayout>
    
    
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvempusername"
                         android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvempusernamelabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etempusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
  </EditText>
        </LinearLayout>
    
    
 <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvemppassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                         android:textColor="#ffffff"
                android:text="@string/tvemppasswordlabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etemppassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:maxLength="8"
                >
  </EditText>
        </LinearLayout>
        
 
  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvmobilenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                         android:textColor="#ffffff"
                android:text="@string/tvempmobilenumberlabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etempmobilenumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" 
                android:maxLength="10"
                >
                 </EditText>
  
            
        </LinearLayout>
        
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvempemailid"
                         android:textColor="#ffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tvempemailidlabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etempemailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress">"
  </EditText>
  
            
        </LinearLayout>
    
            
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvempaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                         android:textColor="#ffffff"
                android:text="@string/tvempaddresslabel"
                android:typeface="serif" />

            <EditText
                android:id="@+id/etempaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text">
  </EditText>
  
            
        </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvaccesslevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                         android:textColor="#ffffff"
                android:text="@string/tvaccesslevellabel"
                android:typeface="serif" />

            <Spinner
                android:id="@+id/spaccesslevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
  </Spinner>
  
            
        </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/empcreate"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
           
           
            android:text="@string/empcreatelabel"
            />

        <Button
            android:id="@+id/empsaveupdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empsaveupdatelabel" />

    </LinearLayout>

    <Button
        android:id="@+id/empviewdetails"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/empviewdetailslabel" />
    <Button
        android:id="@+id/empviewalldetails"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/empviewalldetailslabel" />
    
    <Button
        android:id="@+id/empdelete"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/empdeletelabel" />
    
    
</LinearLayout>
</ScrollView>