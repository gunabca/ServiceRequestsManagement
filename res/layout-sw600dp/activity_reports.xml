<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btconsolidated"
            android:layout_width="0dp"
            android:layout_weight="30"
             android:layout_height="wrap_content"
            android:text="@string/btconsolidatedlabel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:gravity="center"
            android:text="@string/tvconsolidatedlabel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btordersbyemp"
         
            android:layout_height="wrap_content"
             android:layout_width="0dp"
            android:layout_weight="30"
            android:text="@string/etordersbyemplabel" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
             android:layout_weight="70"
             
             android:gravity="center"
            android:text="@string/tvordersbyemplabel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/reportbtviewneworder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/btviewneworderlabel"
             android:layout_weight="30"
             />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvviewneworderlabel" 
             android:layout_weight="70"
             
             android:gravity="center"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rptorderduetoday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rptorderduetodaylabel" 
            
             android:layout_weight="30"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvrptorderduetodaylabel"
             android:layout_weight="70"
             
             android:gravity="center"
             />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/rptorderpending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/rptorderpendinglabel" 
             android:layout_weight="30"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/tvrptorderpendinglabel" 
             android:layout_weight="70"
             
             android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>